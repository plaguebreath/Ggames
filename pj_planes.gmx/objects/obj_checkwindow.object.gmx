// new learned from here 
// https://docs.yoyogames.com/source/dadiospice/002_reference/surfaces/application_get_position.html

//global.screenorientation = display_get_orientation();
var a = application_get_position();
xx = a[0];
yy = a[1];
www = a[2] - a[0];
hhh = a[3] - a[1];

var base_w = 800;
var base_h = 600;

//show_debug_message(www)
//show_debug_message(hhh)

if window_get_fullscreen(){
  widthvisible = display_get_width();
  heightvisible = display_get_height();
  isfullscreen = true; 
}else{
  widthvisible = www;
  heightvisible = hhh;
  isfullscreen = false;
}

//if (oldisfullscreen != global.isfullscreen ){
var aspect = widthvisible / heightvisible;

if (aspect &gt; 1){
    //landscape
    global.ww = base_h * aspect;
    global.hh = base_h;
    display_set_gui_maximise((widthvisible / global.ww), (heightvisible / global.hh), 0, 0);
}else{
    //portrait
    global.ww = base_w;
    global.hh = base_w / aspect;
    display_set_gui_maximise((widthvisible / global.ww), (heightvisible / global.hh), 0, 0);
}

ischangedsize = false;
if (oldisfullscreen != isfullscreen){
  oldisfullscreen = isfullscreen
  ischangedsize = true;
}
if (oldwidthvisible != widthvisible){
  oldwidthvisible= widthvisible
  ischangedsize = true;
}
if (oldheightvisible != heightvisible){
  oldheightvisible= heightvisible
  ischangedsize = true;
}

if (ischangedsize){
if instance_exists(obj_gui){   
  with (obj_gui){
    instance_destroy();
  }
}
instance_create(x, y, obj_gui);
}
